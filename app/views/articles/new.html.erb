<div class="container">
    <h1>New Article</h1>

    <%= form_with model: @article do |form|%>

        <div class="form-control">
            <%= form.label :title %>
            <%= form.text_field :title %>
        </div>

        <div class="form-control">
            <%= form.label :body %>
            <%= form.text_area :body %>
        </div>

        <div class="form-control">
            <%= form.submit class: "btn btn-outline-primary my-1"%>
        </div>

    <% end %>
</div>