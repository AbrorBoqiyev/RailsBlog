<div class="container cover m-5 px-5 py-4 rounded">
    <h1><%= @article.title %></h1>

    <p><%= @article.body %></p>

    <div class="container">
        <%= link_to "back-to-articles", root_path, class: "btn btn-outline-primary py-1" %>
        <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-success py-1" %>
        <%= link_to "Delete", article_path(@article), data: {
            turbo_method: :delete,
                                turbo_confirm: "Are you sure?"
                            }, class: "btn btn-outline-danger py-1" %>
    </div>

</div>

<style>
    .cover{
        box-shadow: 1px 1px 5px black;
        background: linear-gradient(to right bottom, lightgray, lightblue)
    }
    p{
        font-size: 26px;
    }
</style>